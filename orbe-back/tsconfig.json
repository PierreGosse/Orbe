{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es2017",
    "outDir": "./dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules"
  ],
  "reference": [
    {
      "path": "../orbe-common"
    }
  ]
}